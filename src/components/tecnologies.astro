---
interface Tecnologie {
  url: string;
  alt: string;
}

interface Props {
  tecnologies: Array<Tecnologie>;
}

const { tecnologies } = Astro.props;
---

<div class="tecnologies">
  {
    tecnologies.map((tecnologie) => (
      <picture>
        <img src={tecnologie.url} width="25" height="25" alt={tecnologie.alt} />
      </picture>
    ))
  }
</div>

<style>
  .tecnologies {
    margin-bottom: 0.75rem;
    display: flex;
    justify-content: flex-start;
  }

  .tecnologies picture {
    width: 25px;
    height: 25px;
    margin-right: 5px;
    background-color: aqua;
  }
</style>
