---
import Tecnologies from "./tecnologies.astro";

interface Tecnologie {
  url: string;
  alt: string;
}

interface Props {
  id: number;
  title: string;
  desc: string;
  desc2?: string;
  techs: Array<Tecnologie>;
  code: string;
  liveView: string;
}

const { code, desc, desc2, liveView, techs, title } = Astro.props;
---

<article class="card">
  <h3>
    {title}
  </h3>
  <p>
    {desc}
    <br />
    <cite>{desc2}</cite>
  </p>
  <Tecnologies tecnologies={techs} />
  <div class="container_buttons">
    <a class="button" href={liveView} target="_blank"
      ><span class="text">Live view</span></a
    >
    <a class="button" href={code} target="_blank"
      ><span class="text">Code</span></a
    >
  </div>
</article>

<style>
  .card {
    width: 100%;
    padding: 1rem;
    border-radius: 0.25rem;
    box-shadow: rgba(164, 195, 178, 0.3) 0px 0px 0px 3px;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .card h3 {
    font-weight: 700;
    font-size: 1.25rem;
    line-height: 1.75rem;
  }

  .card p {
    font-weight: 300;
    font-size: 1rem;
    line-height: 1.5rem;
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .container_buttons {
    display: flex;
    flex-direction: row;
  }

  .button {
    width: 100px;
    height: 30px;
    margin-right: 5px;
    font-size: 1.2rem;
    cursor: pointer;
    border: none;
    outline: none;
    background: transparent;
    color: black;
    font-weight: 500;
    position: relative;
    transition: all 0.5s;
    z-index: 1;
    display: flex;
    align-items: center;
  }

  .text {
    margin-left: 8px;
  }

  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background-color: rgb(107, 144, 128);
    z-index: -1;
    transition: all 0.5s;
  }

  .button:hover::before {
    width: 100%;
  }

  .button:hover {
    color: white;
  }

  .button:active:before {
    background: rgb(234, 244, 244);
  }

  @media screen and (min-width: 768px) {
    .card {
      width: 45%;
      margin-right: 1.5rem;
    }
  }
  @media screen and (min-width: 928px) {
    .card {
      width: 48%;
      margin-right: 0.8rem;
    }
  }

  @media screen and (min-width: 1020px) {
    .card {
      width: 48%;
      margin-right: 1rem;
    }
  }
</style>
